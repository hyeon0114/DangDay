<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Fragment2">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--        상단 로고-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_marginLeft="125dp"
                android:scaleType="fitXY"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/alert"
                android:layout_width="25dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/tab6"/>

            <ImageView
                android:id="@+id/message"
                android:layout_width="25dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:paddingTop="2dp"
                android:src="@drawable/tab7"/>

        </LinearLayout>

<!--        산책일지-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  산책일지"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:textColor="#f25269"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_baseline_event_note_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="오늘의 하루를 기록해 보세요"
            android:textColor="#37280C"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="산책하면서 있었던 일이나 \n오늘 하루 동안 즐거웠던 일을\n간단하게 적어 기록해보세요!"
            android:textColor="#AEAEAE"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:textSize="15dp"/>

<!--        사진 삽입 레이아웃-->
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="#fadbe1">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_camera_alt_24"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사진으로 기록하기\n 이미지도 넣어주세요!"
                android:textSize="17dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#939393"/>

        </LinearLayout>

<!--        등록하기/취소하기 버튼-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/postup"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:background="#fadbe1"
                android:text="등록하기"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/postreset"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="#f25269"
                android:text="취소하기"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>