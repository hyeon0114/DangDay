<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--    상단 로고-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginLeft="125dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/alert"
            android:layout_width="25dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/tab6"/>

        <ImageView
            android:id="@+id/message"
            android:layout_width="25dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:paddingTop="2dp"
            android:src="@drawable/tab7"/>

    </LinearLayout>

<!--        메인 프로필-->
        <LinearLayout
            android:id="@+id/profile"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/rounded_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="산책 중...   "
                android:textSize="12dp"
                android:drawableEnd="@drawable/drawable_round"
                android:gravity="end"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/mainprofile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/mainprofile"/>
                <!--    프로필 내용 / 이름, 포인트-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="하루"
                        android:textColor="#59320B"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/point"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/drawable_image"
                        android:text="  댕댕포인트"
                        android:textColor="#707070"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/point2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="end"
                        android:text="0 P"
                        android:textSize="22dp"
                        android:textColor="#FF8FA5"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

<!--    오늘 날짜의 산책 시간-->

        <LinearLayout
            android:id="@+id/walk"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:elevation="10dp"
            android:background="@drawable/rounded_layout2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="00:00"
                android:textSize="50dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="오늘 댕댕이 산책시간"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#ffffff"/>
        </LinearLayout>

<!--        친구 응원-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:text="산책 친구들 | 응원하기"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="#59320B" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/friend"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="end"
                android:background="@drawable/ic_baseline_add_circle_outline_24"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!-- 친구 프로필1-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:layout_marginLeft="35dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="  친구이름"
                    android:drawableStart="@drawable/drawable_round"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/drawable_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="응원하기"
                    android:textSize="12dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <!-- 친구 프로필2-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="  친구이름"
                    android:drawableStart="@drawable/drawable_round"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/drawable_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="응원하기"
                    android:textSize="12dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- 친구 프로필3-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="  친구이름"
                    android:drawableStart="@drawable/drawable_round"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/drawable_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="응원하기"
                    android:textSize="12dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- 친구 프로필4-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="  친구이름"
                    android:drawableStart="@drawable/drawable_round"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/drawable_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="응원하기"
                    android:textSize="12dp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    </LinearLayout>

</FrameLayout>