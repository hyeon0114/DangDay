<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Fragment4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--        상단 로고-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_marginLeft="125dp"
                android:scaleType="fitXY"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/alert"
                android:layout_width="25dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/tab6"/>

            <ImageView
                android:id="@+id/message"
                android:layout_width="25dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:paddingTop="2dp"
                android:src="@drawable/tab7"/>

        </LinearLayout>

        <!--        프로필 변경-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#FF8FA5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/mainprofile"
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/mainprofile"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="하루님의 프로필을\n변경하시겠습니까?"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/userset"
                        android:layout_width="100dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="25dp"
                        android:layout_height="30dp"
                        android:background="@color/black"
                        android:text="변경하기"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <!--            관심상품, Q&A-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/like"
                android:layout_width="150dp"
                android:layout_marginTop="10dp"
                android:layout_height="70dp"
                android:background="#fadbe1"
                android:text="댕댕상점\n관심상품"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#606060"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/qna"
                android:layout_width="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_height="70dp"
                android:background="#fadbe1"
                android:text="Q&amp;A\n40개 / 200개"
                android:textSize="15dp"
                android:textColor="#606060"/>

        </LinearLayout>

        <!--        기타 설정-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_set">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이용방법"
                    android:textAlignment="center"
                    android:padding="20dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_set"
                android:layout_marginTop="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="반려견 등록"
                    android:textAlignment="center"
                    android:padding="20dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_set"
                android:layout_marginTop="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="맞춤 설정"
                    android:textAlignment="center"
                    android:padding="20dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_set"
                android:layout_marginTop="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="문의하기"
                    android:textAlignment="center"
                    android:padding="20dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="로그아웃  |   회원 탈퇴"
                    android:textAlignment="center"
                    android:padding="20dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>